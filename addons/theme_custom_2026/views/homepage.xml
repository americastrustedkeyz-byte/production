<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_homepage" inherit_id="website.homepage" name="Custom Home">
        <xpath expr="//div[@id='wrap']" position="replace">
            <div id="wrap" class="oe_structure">
                <!-- This section is what users see immediately on activation -->
                <section class="s_banner bg-900 pt128 pb128" style="background-image: url('/web/image/website.s_banner_default_image'); background-size: cover;">
                    <div class="container text-center text-white">
                        <h1 class="display-1 fw-bold">Welcome to 2026</h1>
                        <p class="lead">This is your custom-deployed homepage from 
                        .</p>
                        <div class="mt-4">
                            <a href="/contactus" class="btn btn-primary btn-lg px-5">Contact Us</a>
                        </div>
                    </div>
                </section>
                
                <!-- This empty div allows you to still drag snippets here later -->
                <div class="oe_structure"/>
            </div>
        </xpath>
    </template>
</odoo>
