<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Simple Custom Snippet -->
    <template id="s_custom_hero" name="Custom 2026 Hero">
        <section class="s_banner bg-200 pt96 pb96">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <h1 style="color: #00A09D;">Welcome to 2026</h1>
                        <p>This snippet was deployed via Odoo.sh.</p>
                        <a href="/" class="btn btn-primary">Get Started</a>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Register the snippet in the Website Builder Sidebar -->
    <template id="register_s_custom_hero" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']//div[@class='o_panel_body']" position="inside">
            <t t-snippet="theme_custom_2026.s_custom_hero" t-thumbnail="/theme_custom_2026/static/description/icon.png"/>
        </xpath>
    </template>
</odoo>