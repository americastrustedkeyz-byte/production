<odoo>
    <data>
        <!-- Create a new product record -->
        <record id="atk_priority_fee" model="product.template">
            <field name="name">ATK Skip-The-Line Priority Fee</field>
            <field name="type">product</field>
            <field name="lst_price">125</field> <!-- This sets the price -->
            <field name="description">A product for testing purposes.</field>
            <!-- Add other fields like barcode, image, etc. -->
        </record>

        <!-- If you want to add it to a specific view, e.g., in the website shop -->
        <record id="website_sale_product_125" model="ir.ui.view">
            <field name="name">website.sale.product.125</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="website_sale.product_list_config"/>
            <field name="arch" type="xml">
                <!-- Add your product to the shop view or modify existing ones -->
                <!-- This example adds it as a new item in the list -->
                <xpath expr="//div[@id='products']" position="inside">
                    <t t-foreach="products" t-as="product">
                        <!-- Display product details -->
                        <t t-esc="product.name"/> - <span t-esc="product.lst_price"/>
                    </t>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
