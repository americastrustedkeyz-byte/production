<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="atk_navbar"
              inherit_id="website.navbar"
              name="ATK Custom Navbar">

        <xpath expr="//nav" position="replace">

            <nav class="atk-navbar">

                <div class="atk-nav-container">

                    <!-- LOGO -->
                    <a href="/" class="atk-logo">
                        <img src="/theme_atk_navy/static/src/img/logo.png"
                             alt="ATK Logo"/>
                    </a>

                    <!-- MOBILE TOGGLE -->
                    <button class="atk-nav-toggle"
                            aria-label="Toggle navigation"
                            onclick="document.body.classList.toggle('atk-nav-open')">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>

                    <!-- LINKS -->
                    <div class="atk-nav-links">
                        <a href="/">Home</a>
                        <a href="/services">Services</a>
                        <a href="/aboutus">About</a>
                        <a href="/contactus">Contact</a>

                        <a href="/book"
                           class="atk-btn-primary">
                            Book Appointment
                        </a>
                    </div>

                </div>

            </nav>

        </xpath>

    </template>

</odoo>
