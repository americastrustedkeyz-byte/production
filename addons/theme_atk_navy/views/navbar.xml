<odoo>
    <template id="atk_navbar" inherit_id="website.layout" name="ATK Navbar">
        <xpath expr="//header" position="replace">
            <header class="atk-navbar">

                <div class="atk-nav-container">

                    <!-- LOGO -->
                    <a href="/" class="atk-logo">
                        <img src="/theme_atk_navy/static/src/img/logo.png"
                             alt="ATK Logo"/>
                    </a>

                    <!-- HAMBURGER (MOBILE) -->
                    <button class="atk-nav-toggle"
                            aria-label="Toggle navigation"
                            onclick="document.body.classList.toggle('atk-nav-open')">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>

                    <!-- LINKS -->
                    <nav class="atk-nav-links">
                        <a href="/">Home</a>
                        <a href="/services">Services</a>
                        <a href="/aboutus">About</a>
                        <a href="/contactus">Contact</a>

                        <a href="/book"
                           class="atk-btn-primary">
                            Book Appointment
                        </a>
                    </nav>

                </div>

            </header>
        </xpath>
    </template>
</odoo>
