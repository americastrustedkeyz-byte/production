<odoo>
    <!-- Sub-page 1: Services -->
    <template id="template_services" name="Our Services">
        <section class="s_text_block pb32 pt32">
            <div class="container">
                <h2>Our Services</h2>
                <p>We provide world-class consulting and development.</p>
            </div>
        </section>
    </template>

    <!-- Sub-page 2: About Us -->
    <template id="template_about" name="About Us">
        <section class="s_image_text pb32 pt32 bg-200">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <img src="/web/image/website.s_banner_default_image" class="img-fluid"/>
                    </div>
                    <div class="col-lg-6">
                        <h2>Who We Are</h2>
                        <p>A team of dedicated Odoo experts since 2010.</p>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Sub-page 3: Contact Info -->
    <template id="template_contact_info" name="Contact Simple">
        <section class="s_text_block pb32 pt32">
            <div class="container">
                <h3>Get In Touch</h3>
                <p>Email: info@yourtheme.com</p>
            </div>
        </section>
    </template>

    <!-- Hero section-->
    <!-- ========================= -->
    <!-- ADMIN / LOGGED-IN HOMEPAGE -->
    <!-- ========================= -->
    <template id="atk_hero" name="Hero Section">

        <!-- HERO -->
        <section class="atk-hero-admin atk-hero-bg">
            <div class="atk-hero-overlay"></div>

            <div class="container position-relative">
                <div class="row align-items-center">

                    <!-- LEFT -->
                    <div class="col-lg-6">
                        <span class="atk-badge">TrustedKey.US</span>

                        <h1 class="atk-title">
                            ATK — America's trusted key company for your next key.
                        </h1>

                        <p class="atk-subtitle">
                            Advanced identity, security, and access solutions.
                        </p>
                        
                <div class="atk-hero-actions">

                    <!-- OUTLINE / MODAL BUTTON -->
                    <button
                        type="button"
                        class="atk-hero-btn atk-hero-btn-outline"
                        data-bs-toggle="modal"
                        data-bs-target="#atkVehicleModal">
                        Check Vehicle Availability
                    </button>

                    <!-- PRIMARY CTA -->
                    <a href="/atk-booking" class="atk-hero-btn atk-hero-btn-filled">
                        Book Your Replacement
                    </a>

                </div>

                <div class="atk-metric">
                            <strong>1,000+</strong>
                            <span>Drivers</span>
                        </div>
                    </div>

                    <!-- RIGHT -->
                    <div class="col-lg-6 text-center">
                        <div class="atk-product-mock"></div>
                    </div>

                </div>
            </div>
        </section>


        <!-- TRUSTED BY -->
        <section class="atk-trust">
            <div class="container text-center">
                <p class="atk-trust-title">Trusted by industry leaders</p>

                <div class="atk-trust-logos">
                    <!--span>RANKEN</span>
                    <span>HILCO</span>
                    <span>METRO</span-->
                </div>
            </div>
        </section>

        <!-- VALUE SECTION -->
        <section class="atk-value">
            <div class="container">
                <h2 class="atk-section-title">
                    Security is not optional. It is engineered.
                </h2>

                <div class="row align-items-center mt-4">
                    <div class="col-lg-6">
                        <div class="atk-image-placeholder"></div>
                    </div>

                    <div class="col-lg-6">
                        <p>
                            We specialize in high-security automotive keys that
                            require advanced identity verification, specialized
                            programming, and strict scheduling controls.
                        </p>

                        <a href="/contactus" class="atk-link">
                            Book your replacement →
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- SERVICES -->
        <section class="atk-services">
            <div class="container">
                <h2 class="atk-section-title text-center">
                    Services Overview
                </h2>

                <div class="row mt-5">

                    <div class="col-lg-4">
                        <div class="atk-service-card">
                            <h4>Basic Service</h4>
                            <p class="price">$85</p>
                            <p>Standard replacement</p>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="atk-service-card featured">
                            <h4>Smart Key</h4>
                            <p class="price">$195+</p>
                            <ul>
                                <li>$245 – Advanced Transponder</li>
                                <li>$295 – Security Programming</li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="atk-service-card">
                            <h4>Premium</h4>
                            <p>Dealer-level support</p>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <!-- ================= TESTIMONIALS ================= -->
            <section>
                <div id="atk_testimonials" class="atk-testimonials">
                <div class="container text-center">

                    <span class="atk-section-eyebrow">
                        Trusted by industry leaders and institutions
                    </span>

                    <h2 class="atk-section-title">
                        What our customers are saying
                    </h2>

                    <div class="row justify-content-center mt-5">

                        <!-- Testimonial Card -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="atk-testimonial-card">
                                <div class="atk-quote">“</div>
                                <p class="atk-testimonial-text">
                                    Reliable, fast, and secure. The booking process was seamless
                                    and the service exceeded expectations.
                                </p>
                                <div class="atk-user">
                                    <img src="/theme_atk_navy/static/src/img/custom1.PNG"
                                        alt="Customer"
                                        class="atk-avatar"/>
                                    <div>
                                        <strong>Tim Tom</strong>
                                        <span>Car Holder</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Testimonial Card -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="atk-testimonial-card">
                                <div class="atk-quote">“</div>
                                <p class="atk-testimonial-text">
                                    Professional service with attention to detail.
                                    I felt confident throughout the entire process.
                                </p>
                                <div class="atk-user">
                                    <img src="/theme_atk_navy/static/src/img/custom2.PNG"
                                        alt="Customer"
                                        class="atk-avatar"/>
                                    <div>
                                        <strong>Jane</strong>
                                        <span>Car Holder</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Testimonial Card -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="atk-testimonial-card">
                                <div class="atk-quote">“</div>
                                <p class="atk-testimonial-text">
                                    Smooth experience from booking to delivery.
                                    Highly recommended for secure key services.
                                </p>
                                <div class="atk-user">
                                    <img src="/theme_atk_navy/static/src/img/custom3.PNG"
                                        alt="Customer"
                                        class="atk-avatar"/>
                                    <div>
                                        <strong>Amanda</strong>
                                        <span>Car Holder</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </section>

        <!-- BOOKING TRACK SECTION-modal -->

        <!--vehicle identification-modal 1-->
        <section id="atk_vehicle_modal">
            <div class="modal fade" id="atkVehicleModal" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content atk-modal-dark">

                        <!-- HEADER -->
                        <div class="atk-modal-header text-center">
                            <h2>VEHICLE IDENTIFICATION</h2>
                            <p>Select your vehicle details for accurate pricing.</p>

                            <div class="atk-booking-chip">
                                <span>⏱</span>
                                Standard Booking (Weekend Access)
                            </div>
                        </div>

                        <!-- BODY -->
                        <div class="modal-body atk-modal-body">

                            <!-- Key Type -->
                            <div class="atk-form-group">
                                <label>Key Type</label>
                                <select class="atk-select">
                                    <option>Smart Key</option>
                                    <option>Transponder</option>
                                    <option>I don’t know</option>
                                </select>
                            </div>

                            <!-- Vehicle Make -->
                            <div class="atk-form-group">
                                <label>Vehicle Make</label>
                                <select class="atk-select">
                                    <option>Select Make</option>
                                </select>
                            </div>

                            <!-- Vehicle Model -->
                            <div class="atk-form-group">
                                <label>Vehicle Model</label>
                                <select class="atk-select">
                                    <option>Select Model</option>
                                </select>
                            </div>

                            <!-- Vehicle Year -->
                            <div class="atk-form-group">
                                <label>Vehicle Year</label>
                                <select class="atk-select">
                                    <option>Select Year</option>
                                </select>
                            </div>

                        </div>

                        <!-- FOOTER -->
                        <div class="atk-modal-footer">
                            <button class="atk-btn-primary w-100">
                                Continue →
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </template>

    <!--Date countdown-->
     <template id="atk_countdown" name="Launch Countdown">
        <section class="atk-countdown">
            <div class="container atk-center">

                <h2 class="atk-countdown-title">
                    Launching Soon
                </h2>

                <div id="atk-countdown-timer" class="atk-timer">
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-days">00</span>
                        <span class="atk-label">Days</span>
                    </div>
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-hours">00</span>
                        <span class="atk-label">Hours</span>
                    </div>
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-minutes">00</span>
                        <span class="atk-label">Minutes</span>
                    </div>
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-seconds">00</span>
                        <span class="atk-label">Seconds</span>
                    </div>
                </div>

            </div>
        </section>
    </template>
</odoo>
