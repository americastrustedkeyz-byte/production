<odoo>
    <!-- Sub-page 1: Services -->
    <template id="template_services" name="Our Services">
        <section class="s_text_block pb32 pt32">
            <div class="container">
                <h2>Our Services</h2>
                <p>We provide world-class consulting and development.</p>
            </div>
        </section>
    </template>

    <!-- Sub-page 2: About Us -->
    <template id="template_about" name="About Us">
        <section class="s_image_text pb32 pt32 bg-200">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <img src="/web/image/website.s_banner_default_image" class="img-fluid"/>
                    </div>
                    <div class="col-lg-6">
                        <h2>Who We Are</h2>
                        <p>A team of dedicated Odoo experts since 2010.</p>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Sub-page 3: Contact Info -->
    <template id="template_contact_info" name="Contact Simple">
        <section class="s_text_block pb32 pt32">
            <div class="container">
                <h3>Get In Touch</h3>
                <p>Email: info@yourtheme.com</p>
            </div>
        </section>
    </template>

    <!-- Hero section-->
    <template id="atk_hero" name="Hero Section">
        <section class="atk-hero">
            <div class="container atk-center">
                <h1 class="atk-title">
                    ATK â€” America's Trusted Key
                </h1>
                <p class="atk-subtitle">
                    Security is not optional. It is engineered.
                </p>
                <a href="/contactus" class="atk-btn">
                    Contact Us
                </a>
            </div>
        </section>
    </template>

    <!--Date countdown-->
     <template id="atk_countdown" name="Launch Countdown">
        <section class="atk-countdown">
            <div class="container atk-center">

                <h2 class="atk-countdown-title">
                    Launching Soon
                </h2>

                <div id="atk-countdown-timer" class="atk-timer">
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-days">00</span>
                        <span class="atk-label">Days</span>
                    </div>
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-hours">00</span>
                        <span class="atk-label">Hours</span>
                    </div>
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-minutes">00</span>
                        <span class="atk-label">Minutes</span>
                    </div>
                    <div class="atk-time-box">
                        <span class="atk-time" id="atk-seconds">00</span>
                        <span class="atk-label">Seconds</span>
                    </div>
                </div>

            </div>
        </section>
    </template>
</odoo>
