<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Override default Odoo homepage ONCE -->
    <template id="atk_homepage" inherit_id="website.homepage" name="ATK Homepage">

        <xpath expr="//div[@id='wrap']" position="replace">
            <div id="wrap" class="oe_structure">

                <!-- ========================= -->
                <!-- ADMIN / LOGGED-IN USERS -->
                <!-- ========================= -->
                <t t-if="request.env.user.has_group('base.group_user')">

                    <!-- HERO -->
                    <t t-call="theme_atk_navy.atk_hero"/>

                    <!-- PLACEHOLDER FOR FUTURE SECTIONS -->
                    <!-- services, about, calendar, etc -->
                    <div class="oe_structure"/>

                </t>

                <!-- ========================= -->
                <!-- PUBLIC VISITORS -->
                <!-- ========================= -->
                <t t-else="">

                    <!-- COUNTDOWN ONLY -->
                    <t t-call="theme_atk_navy.atk_countdown"/>

                </t>
            </div>
        </xpath>
    </template>
</odoo>
