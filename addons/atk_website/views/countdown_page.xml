<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Countdown View -->
        <record id="view_atk_countdown" model="ir.ui.view">
            <field name="name">atk.countdown.view</field>
            <field name="type">qweb</field>
            <field name="arch" type="xml">
                <![CDATA[
                <t t-call="website.layout">
                    <section class="container text-center py-5">
                        <h1>Launching Soon</h1>
                        <div id="atk-countdown"></div>
                    </section>
                </t>
                ]]>
            </field>
        </record>

        <!-- Countdown Page -->
        <record id="page_atk_countdown" model="website.page">
            <field name="name">ATK Countdown</field>
            <field name="url">/countdown</field>
            <field name="view_id" ref="view_atk_countdown"/>
            <field name="is_published">True</field>
        </record>

    </data>
</odoo>
