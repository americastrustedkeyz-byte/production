<odoo>
  <template
    id="atk_appointment_info_override"
    inherit_id="appointment.appointment_info"
    priority="50">

    <xpath expr="//h1[contains(text(),'Appointment Scheduled')]" position="after">

      <div class="alert alert-info mt-3">
        <strong>Next step:</strong>
        You'll be redirected to complete payment.
      </div>

      <!-- Marker element for JS redirect -->
      <div id="atk-appointment-confirmed" data-atk="confirmed"/>

    </xpath>

  </template>
</odoo>

