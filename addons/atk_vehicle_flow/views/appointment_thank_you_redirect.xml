<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="appointment_confirmation_custom" inherit_id="appointment.appointment_info" name="Custom Appointment Confirmation Message">
            <!-- In Odoo 18, we target the main column inside the appointment info container -->
            <xpath expr="//div[@id='wrap']//div[hasclass('container')]" position="inside">
                <div class="alert alert-success mt-4" role="alert">
                    <h4 class="alert-heading">Booking Confirmed for 2026!</h4>
                    <p>Thank you for your booking. Please ensure you have your confirmation details ready upon arrival.</p>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
