<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the base appointment info template -->
        <template id="appointment_confirmation_custom_atk_frontend" inherit_id="appointment.appointment_info" name="Frontend Only Confirmation Message">
            
            <!-- Target the specific public website layout area -->
            <xpath expr="//div[@id='wrap']/div[hasclass('container')]" position="inside">
                <div class="alert alert-info mt-4 shadow-sm" role="alert">
                    <h4 class="alert-heading">Booking Confirmed for 2026!</h4>
                    <p>This message should **only** appear on the public website confirmation page.</p>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
