<odoo>
  <template
    id="atk_appointment_info_override"
    inherit_id="appointment.appointment_info"
    priority="100">

    <!-- SAFEST POSSIBLE INSERTION POINT -->
    <xpath expr="//div[@id='wrap']" position="inside">

      <!-- Keep default content untouched -->
      <div id="atk-appointment-confirmed"
           data-atk-confirmed="1"
           style="display:none;"></div>

      <script type="text/javascript">
        setTimeout(function () {
          window.location.href = "/atk/report/checkout";
        }, 2000);
      </script>

    </xpath>

  </template>
</odoo>
