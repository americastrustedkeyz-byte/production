        <!-- Inject AFTER the main confirmation block -->
        <xpath expr="//div[contains(@class,'o_appointment_confirmation')]" position="inside">

          <div class="alert alert-info mt-3">
            Thank you for booking. Redirecting to secure paymentâ€¦
          </div>

          <script type="text/javascript">
            setTimeout(function () {
              window.location.href = "/atk/report/checkout";
            }, 2500);
          </script>

        </xpath>

      </field>
    </record>

  </data>
</odoo>
