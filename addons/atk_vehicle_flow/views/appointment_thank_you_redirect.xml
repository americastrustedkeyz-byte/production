<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the base appointment info template (the Thank You Page) -->
        <template id="appointment_confirmation_custom_atk" inherit_id="appointment.appointment_info" name="Custom ATK Confirmation Message Fix">
            
            <!-- Target the specific div that wraps the confirmation details content -->
            <xpath expr="//div[hasclass('o_appointment_validation_details')]" position="inside">
                 <div class="alert alert-info mt-4">
                    **Thank You Page Custom Message:** Your appointment details are above this box.
                 </div>
            </xpath>
        </template>
    </data>
</odoo>
