<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the base appointment info template -->
        <template id="appointment_confirmation_custom_atk_final" inherit_id="appointment.appointment_info" name="Custom ATK Confirmation Message Final Fix">
            <!-- Targeting a simple container which is universal -->
            <xpath expr="//div[hasclass('container')]" position="inside">
                 <div class="alert alert-info mt-4">
                    **Confirmation Message:** This is the universal message for the thank you page.
                 </div>
            </xpath>
        </template>
    </data>
</odoo>
