<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- The template tag handles inheritance in module files -->
        <template id="appointment_confirmation_custom" inherit_id="appointment.appointment_info" name="Custom Appointment Confirmation Message">
            <!-- Use xpath inside the template to target specific areas -->
            <xpath expr="//div[hasclass('o_appointment_validation_details')]" position="inside">
                <div class="alert alert-info mt-4" role="alert">
                    <h4 class="alert-heading">Booking Confirmed for 2026!</h4>
                    <p>Your appointment has been successfully scheduled. Please arrive 10 minutes early.</p>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
