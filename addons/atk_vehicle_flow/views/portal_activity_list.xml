<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_my_activity" name="My Activity">

        <t t-call="portal.portal_layout">

            <div class="container mt-4">
                <h2>My Activity</h2>

                <t t-if="records and len(records)">
                    <t t-foreach="records" t-as="r">
                        <div class="card mb-3">
                            <div class="card-body">
                                <p><strong>Make:</strong> <t t-esc="r.payload and r.payload.get('make') or ''"/></p>
                                <p><strong>Model:</strong> <t t-esc="r.payload and r.payload.get('model') or ''"/></p>
                                <p><strong>Year:</strong> <t t-esc="r.payload and r.payload.get('year') or ''"/></p>
                                <p><strong>Price:</strong> <t t-esc="r.payload and r.payload.get('price') or ''"/></p>

                                <small class="text-muted">
                                    <t t-esc="r.create_date"/>
                                </small>
                            </div>
                        </div>
                    </t>
                </t>

                <t t-else="">
                    <p>No activity recorded yet.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
